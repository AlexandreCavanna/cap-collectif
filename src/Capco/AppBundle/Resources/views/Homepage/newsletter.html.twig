<section id="newsletter" class="section--custom">
    <div class="container text-center">
        {% if null != section.title %}
            <h2 class="h2">{{ section.title }}</h2>
        {% else %}
            <h2 class="h2">{{ 'capco.module.newsletter' | trans({}, 'CapcoAppBundle') }}</h2>
        {% endif %}
        {% if null != section.teaser %}
            <p class="block">{{ section.teaser }}</p>
        {% endif %}
        {% if null != section.body %}
            <p>{{ section.body | raw }}</p>
        {% endif %}
        {{ react_render_component('NewsLetterPageApp') }}
        {% if null != capco_site_parameter_value('global.site.organization_name') or '' != capco_site_parameter_value('global.site.organization_name') %}
        <p class="excerpt">
            <i>{{ 'information-for-the-newsletter-registration-form'|trans({'{organisationName}': capco_site_parameter_value('global.site.organization_name') }, 'CapcoAppBundle')|raw }}</i>
        </p>
        {% endif %}
    </div>
</section>
